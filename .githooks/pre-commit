#!/bin/bash

# Get list of C/C++ files that are staged for commit
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cpp|h|hpp)$')

if [ -z "$STAGED_FILES" ]; then
    echo "No C/C++ files to lint."
    exit 0
fi

echo "Running clang-format on staged files..."

# Store the current stash state
STASH_NAME="pre-commit-$(date +%s)"
git stash save -q --keep-index "$STASH_NAME"

# Run clang-format check on each staged file
FORMAT_FAILED=0
for FILE in $STAGED_FILES; do
    # Check if file needs formatting
    clang-format --style=file --dry-run --Werror "$FILE" 2>&1
    if [ $? -ne 0 ]; then
        echo "❌ Formatting issues found in: $FILE"
        FORMAT_FAILED=1
    else
        echo "✅ $FILE is properly formatted"
    fi
done

# Restore stashed changes
STASH_NUM=$(git stash list | grep "$STASH_NAME" | cut -d: -f1)
if [ -n "$STASH_NUM" ]; then
    git stash pop -q $STASH_NUM
fi

if [ $FORMAT_FAILED -ne 0 ]; then
    echo ""
    echo "❌ Commit rejected: Please format the files using clang-format"
    echo "Run: clang-format -i <filename> to fix formatting"
    exit 1
fi

echo ""
echo "✅ All files are properly formatted"
exit 0